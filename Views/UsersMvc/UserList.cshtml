@model IEnumerable<BookReviewApp.Dtos.UserDtos.UserResponseDto>

@{
    ViewData["Title"] = "Admin - Users Management";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Users Management</h1>

    <div class="table-responsive rounded-3 overflow-hidden">
        <table class="table table-striped table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Reviews Count</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int index = 1;
                    foreach (var user in Model)
                    {
                        <tr id="row-view-@user.Id">
                            <th scope="row">@index</th>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@(user.ReviewsDtos?.Count ?? 0)</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-primary me-2" onclick="toggleEdit('@user.Id')">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </button>
                                <form asp-action="DeleteConfirmed" asp-route-id="@user.Id" method="post"
                                    style="display:inline;"
                                    onsubmit="return confirm('Do you really want to delete this user? This action is not reversible!');">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>

                        <tr id="row-edit-@user.Id" style="display:none; background-color: #f8f9fa;">
                            <form asp-action="UpdateUser" asp-route-id="@user.Id" method="post">
                                <th scope="row">@index</th>
                                <td>
                                    <input type="text" name="Username" value="@user.Username" 
                                        class="form-control form-control-sm"/>
                                </td>
                                <td>
                                    <input type="email" name="Email" value="@user.Email" 
                                        class="form-control form-control-sm"/>
                                </td>
                                <td>@(user.ReviewsDtos?.Count ?? 0)</td>
                                <td class="text-center">
                                    <button type="submit" class="btn btn-sm btn-success me-2">
                                        <i class="bi bi-check-lg"></i> Save
                                    </button>
                                    <button type="button" class="btn btn-sm btn-secondary" onclick="toggleEdit('@user.Id')">
                                        <i class="bi bi-x-lg"></i> Cancel
                                    </button>
                                </td>
                            </form>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No users found.</td>
                    </tr>
                }
            </tbody>
        </table>

        @if (Model != null && Model.Any())
        {
            @foreach (var user in Model)
            {
                <form id="edit-form-@user.Id" 
                    asp-action="Edit" 
                    asp-route-id="@user.Id" 
                    method="post">
                </form>
            }
        }
    </div>
</div>

<!-- Optional: Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

@section Scripts {
    <script src="~/js/usersManagement.js"></script>
}