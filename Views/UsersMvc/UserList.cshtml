@model IEnumerable<BookReviewApp.Dtos.UserDtos.UserResponseDto>

@{
    ViewData["Title"] = "Admin - Users Management";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Users Management</h1>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Reviews Count</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int index = 1;
                    foreach (var user in Model)
                    {
                        <tr>
                            <th scope="row">@index</th>
                            <td>@user.Username</td>
                            <td>@user.Email</td>
                            <td>@(user.ReviewsDtos?.Count ?? 0)</td>
                            <td class="text-center">
                                <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary me-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>                        

                                <form asp-action="DeleteConfirmed" asp-route-id="@user.Id" method="post" 
                                    style="display:inline;" onsubmit="return confirm('Do you really want to delete this user?');">
                                    <button type="submit" class="btn btn-danger btn-sm"> <i class="bi bi-trash"></i> Delete</button>
                                </form>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No users found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Optional: Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">